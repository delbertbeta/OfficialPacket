.text {
  color: #000000;
}

.welcome-text {
  margin: 32rpx 0 12rpx 0;
  font-size: 32pt;
  font-weight: bold;
}

.welcome-subtext {
  margin: 0rpx 0 64rpx 0;
  color: #666666;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.background {
  position: fixed;
  bottom: 0;
  width: 100%;
  opacity: 0.6;
  z-index: -1;
}