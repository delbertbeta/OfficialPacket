/* pages/subscribe/subscribe.wxss */
.top-search {
  border-radius: 8rpx;
  margin: 4rpx 32rpx;
  margin-bottom: 16rpx;
  padding: 18rpx 12rpx;
  background-color: #eeeeee;
}

.subscribe-list {
  height: calc(100vh - 106rpx);
}

.subscribe-item {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 128rpx;
  position: relative;
}

.official-face {
  height: 92rpx;
  width: 92rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  margin-left: 48rpx;
}

.info-container {
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  padding-right: 48rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.official-recent-title, .post-time {
  font-size: 28rpx;
  color: #bebebe;
}

.post-time {
  position: absolute;
  right: 48rpx;
  top: 24rpx;
}